<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Battery outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke
                android:width="2dp"
                android:color="@color/gray" />
        </shape>
    </item>
    
    <!-- Battery terminal -->
    <item android:right="-6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" />
            <size
                android:width="4dp"
                android:height="10dp" />
            <corners
                android:topRightRadius="1dp"
                android:bottomRightRadius="1dp" />
        </shape>
    </item>
    
    <!-- Dynamic battery level - color is set programmatically -->
    <item android:id="@+id/battery_level"
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/batteryHigh" />
                <corners android:radius="1dp" />
            </shape>
        </clip>
    </item>
</layer-list>

